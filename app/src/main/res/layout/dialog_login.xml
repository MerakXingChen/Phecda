<?xml version="1.0" encoding="utf-8"?>
<com.root.common.ui.OverScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="12dp">

        <!-- Dialog Content Container -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/krscript_item_ripple_inactive"
            android:orientation="vertical"
            android:padding="16dp">
            <!-- Username EditText -->

            <TextView
                android:id="@+id/confirm_title123"
                style="@style/textTitle"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:paddingStart="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:text="登入/注册"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/confirm_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/activity_horizontal_margin"
                android:paddingTop="8dp"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:text="如果没有帐号，可以到官方网站注册\n如果忘记密码或者用户名，请到官方网站修改" />

            <EditText
                android:id="@+id/et_username"
                style="@style/Widget.AppCompat.EditText"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/kr_switch_track"
                android:hint="请输入邮箱"
                android:inputType="text" />

            <!-- Password EditText -->
            <EditText
                android:id="@+id/et_password"
                style="@style/Widget.AppCompat.EditText"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/kr_switch_track"
                android:hint="请输入密码"
                android:inputType="textPassword" />

        </LinearLayout>

        <!-- Buttons Container -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            android:gravity="end">

            <!-- Login Button -->
            <Button
                android:id="@+id/btn_login"
                style="@style/dialogConfirmBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="登入"></Button>

            <Button
                android:id="@+id/btn_cancel"
                style="@style/dialogCancelBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:text="注册"></Button>

            <!-- Cancel Button -->

        </LinearLayout>

    </LinearLayout>

</com.root.common.ui.OverScrollView>
