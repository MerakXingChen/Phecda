<?xml version="1.0" encoding="utf-8"?>
<com.root.common.ui.OverScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="12dp">

        <!-- Dialog Content Container -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/krscript_item_ripple_inactive"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/confirm_title"
                style="@style/textTitle"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:paddingStart="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:text="上传资源"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/confirm_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/activity_horizontal_margin"
                android:paddingTop="8dp"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:text="请填写资源的详细信息，包括标题、描述和下载链接" />

            <EditText
                android:id="@+id/et_title"
                style="@style/Widget.AppCompat.EditText"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/kr_switch_track"
                android:hint="资源标题"
                android:inputType="text" />

            <EditText
                android:id="@+id/et_description"
                style="@style/Widget.AppCompat.EditText"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/kr_switch_track"
                android:hint="资源描述"
                android:inputType="text" />

            <EditText
                android:id="@+id/et_download_url"
                style="@style/Widget.AppCompat.EditText"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/kr_switch_track"
                android:hint="下载链接"
                android:inputType="textUri" />
        </LinearLayout>

        <!-- Buttons Container -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            android:gravity="end">

            <!-- Upload Button -->
            <Button
                android:id="@+id/btn_upload"
                style="@style/dialogConfirmBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="上传" />

            <Button
                android:id="@+id/btn_cancel"
                style="@style/dialogCancelBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:text="取消" />
        </LinearLayout>

    </LinearLayout>

</com.root.common.ui.OverScrollView>
