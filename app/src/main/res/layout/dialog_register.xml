<?xml version="1.0" encoding="utf-8"?>
<com.root.common.ui.OverScrollView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="12dp">

        <!-- Dialog Content Container -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/krscript_item_ripple_inactive"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/confirm_title123"
                style="@style/textTitle"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:paddingStart="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:text="用户注册"
                android:textSize="20sp" />

            <!-- 用户名输入 -->
            <EditText
                android:id="@+id/et_username"
                style="@style/Widget.AppCompat.EditText"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/kr_switch_track"
                android:hint="用户名（2-16位）"
                android:inputType="textCapCharacters" />

            <!-- 邮箱和验证码发送 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/et_email"
                    style="@style/Widget.AppCompat.EditText"
                    android:layout_width="0dp"
                    android:layout_height="44dp"
                    android:layout_weight="1"
                    android:background="@drawable/kr_switch_track"
                    android:hint="邮箱地址"
                    android:inputType="textEmailAddress" />

                <Button
                    android:id="@+id/btn_send_code"
                    android:layout_width="100dp"
                    android:layout_height="44dp"
                    android:layout_marginStart="8dp"
                    android:text="发送验证码"
                    style="@style/dialogConfirmBtn"/>
            </LinearLayout>

            <!-- 验证码输入 -->
            <EditText
                android:id="@+id/et_code"
                style="@style/Widget.AppCompat.EditText"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/kr_switch_track"
                android:hint="验证码（6位数字）"
                android:inputType="number" />

            <!-- 密码输入 -->
            <EditText
                android:id="@+id/et_password"
                style="@style/Widget.AppCompat.EditText"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/kr_switch_track"
                android:hint="密码（至少6位）"
                android:inputType="textPassword" />

            <TextView
                android:id="@+id/confirm_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/activity_horizontal_margin"
                android:paddingTop="16dp"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:text="已发送的验证码10分钟内有效\n如果遇到问题请联系管理员" />
        </LinearLayout>

        <!-- 按钮容器 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="end"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_register"
                style="@style/dialogConfirmBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="立即注册" />

            <Button
                android:id="@+id/btn_cancel"
                style="@style/dialogCancelBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="取消" />
        </LinearLayout>

    </LinearLayout>
</com.root.common.ui.OverScrollView>